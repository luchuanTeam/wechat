.comment {
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #e8e8e8;
}

.comment .avatar {
  display: inline-block;
  margin-right: 20rpx;
  width: 80rpx;
  height: 80rpx;
  vertical-align: top;
}

.comment .avatar image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.comment .info {
  display: inline-block;
}

.comment .info .user-name {
  font-size: 32rpx;
  color: #222;
}

.comment .info .create-time {
  font-size: 28rpx;
  color: #999;
}

.comment .tip-off {
  position: relative;
  float: right;
}

.comment .tip-off .img-wrapper {
  padding: 5rpx;
}

.comment .tip-off .img-wrapper .img {
  margin-top: 10rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #9b9b9b;
  border-radius: 50%;
}

.comment .tip-off .tip {
  position: absolute;
  top: -2rpx;
  right: 40rpx;
  padding: 10rpx 30rpx;
  color: #7aa247;
  border: 2rpx solid #dfdede;
  border-radius: 10rpx;
  width: 100rpx;
  text-align: center;
  box-shadow: 10rpx 10rpx 10rpx #dfdede;
  font-size: 36rpx;
}

.tip .arrow-right {
  position: absolute;
  right: -30rpx;
  top: 24rpx;
  width:0;
  height:0;
  border-top:15rpx solid transparent;
  border-bottom:15rpx solid transparent;
  border-left:30rpx solid #dfdede;
}

.tip .arrow-right:before {
  position: absolute;
  top: -14rpx;
  left: -31rpx;
  content: ' ';
  width:0;
  height:0;
  border-top:13rpx solid transparent;
  border-bottom:13rpx solid transparent;
  border-left:28rpx solid #ffffff;
}

.comment .content {
  margin: 10rpx 0;
  font-size: 32rpx;
  color: #222;
}

.hide {
  display: none !important;
}